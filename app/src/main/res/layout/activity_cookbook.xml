<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm400"
                android:scaleType="fitXY"
                android:src="@mipmap/img1" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm050"
                android:paddingBottom="@dimen/dm010"
                android:text="马卡龙"
                android:textColor="@color/text_title"
                android:textSize="@dimen/dm035" />

            <TextView
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/dm030"
                android:text="@string/introduction"
                android:textColor="@color/text_body"
                android:textSize="@dimen/dm020" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm030"
                android:paddingBottom="@dimen/dm030"
                android:text="—食材清单—"
                android:textColor="@color/text_title"
                android:textSize="@dimen/dm025" />

            <ListView
                android:id="@+id/lv_food_materiel_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm020" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm030"
                android:paddingBottom="@dimen/dm030"
                android:text="—制作步骤—"
                android:textColor="@color/text_title"
                android:textSize="@dimen/dm025" />

            <ListView
                android:id="@+id/steps"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"></ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm030"
                android:paddingBottom="@dimen/dm030"
                android:text="—小贴士—"
                android:textColor="@color/text_title"
                android:textSize="@dimen/dm025" />

            <TextView
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:padding="@dimen/dm030"
                android:text="@string/introduction"
                android:textColor="@color/text_body"
                android:textSize="@dimen/dm020" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
